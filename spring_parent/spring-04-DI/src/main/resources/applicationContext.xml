<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.trans.pojo.Address" name="address">
        <property name="address" value="北京" />
    </bean>

    <bean class="com.trans.pojo.Student" name="student">
        <!-- 第一种 基本数据类型注入 -->
        <property name="name" value="猜猜我是谁" />

        <!-- 第二种 对象Bean类型注入 ref引用对象时用 -->
        <property name="address" ref="address" />

        <!-- 第三种 数组方式注入 -->
        <property name="books">
            <array>
                <value>11</value>
                <value>22</value>
                <value>33</value>
                <value>44</value>
            </array>
        </property>

        <!-- 第四种 list集合注入 -->
        <property name="hobbys">
            <list>
                <value>人</value>
                <value>男人</value>
                <value>女人</value>
            </list>
        </property>

        <!-- 第五种 map集合注入 -->
        <property name="card">
            <map>
                <entry key="1" value="张三" />
                <entry key="2" value="李四" />
            </map>
        </property>

        <!-- 第五种 set集合注入 -->
        <property name="games">
            <set>
                <value>1</value>
                <value>1</value>
                <value>2</value>
                <value>1</value>
            </set>
        </property>

        <!-- 第六种 null类型注入 -->
        <!--如果为空字符串,那么value直接写成空字符串即可 ->  <property name="wife" value=""/>-->
        <property name="wife">
            <null />
        </property>

        <!-- 第七种 properties类型注入 也就是key=value方式注入 -->
        <property name="info">
            <props>
                <prop key="学号">2333</prop>
                <prop key="性别">我也不知道</prop>
            </props>
        </property>
    </bean>

    <bean class="com.trans.pojo.Person" name="person p1 p2 p3 person2">
        <property name="name" value="张三" />
        <property name="age" value="18" />
    </bean>

</beans>